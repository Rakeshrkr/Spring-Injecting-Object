<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
 <bean id="triangle" class="com.rakesh.example.springbeans.Triangle" abstract="true">
   <property name="pointA" ref="pointA"/>
  
 </bean>
 
 <bean id="triangle1" class="com.rakesh.example.springbeans.Triangle" parent="triangle">
   <property name="pointB" ref="pointB"/>
   <property name="pointC" ref="pointC"/>
 </bean>
 
 <bean id="triangle2" class="com.rakesh.example.springbeans.Triangle" parent="triangle1">
   <property name="pointB" ref="pointC"/>
   <property name="pointC" ref="pointB"/>
 </bean>
 
 <bean id="pointA" class="com.rakesh.example.springbeans.Point" >
  <property name="x" value="0"/>
  <property name="y" value="0"/>
 </bean>
 
 <bean id="pointB" class="com.rakesh.example.springbeans.Point">
  <property name="x" value="10"/>
  <property name="y" value="0"/>
 </bean>
 
 <bean id="pointC" class="com.rakesh.example.springbeans.Point">
  <property name="x" value="0"/>
  <property name="y" value="10"/>
 </bean>
 
</beans>